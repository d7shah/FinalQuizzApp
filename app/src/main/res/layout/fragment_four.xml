<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/road">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btn4"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:background="#fff3ff3a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What does this sign mean?"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textColor="#ffd52c2e"
        android:textSize="24dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only pedestrians"
            android:id="@+id/q4a1"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#ffd52c2e"
            android:textStyle="bold"
            android:buttonTint="#ffd52c2e"
            android:paddingRight="90dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No entry for pedestrians"
            android:id="@+id/q4a2"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:buttonTint="#ffd52c2e"
            android:textColor="#ffd52c2e"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingRight="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do not runover pedestrians"
            android:id="@+id/q4a3"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffd52c2e"
            android:buttonTint="#ffd52c2e" />

    </RadioGroup>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nopeds"
        android:layout_marginTop="20dp" />
</RelativeLayout>